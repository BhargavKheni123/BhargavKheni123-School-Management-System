@model digital.Models.QuestionMaster
@{
    ViewData["Title"] = "Create Question";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1 class="mb-4">Add Question</h1>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card p-4 shadow-lg">
                <form asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Standard</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
                                <option value="">-- Select Standard --</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Subject</label>
                            <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectList">
                                <option value="">-- Select Subject --</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>Exam Type</label>
                            <select asp-for="ExamType" class="form-control">
                                <option value="">-- Select --</option>
                                <option>Unit Test</option>
                                <option>Midterm</option>
                                <option>Final</option>
                                <option>Practical</option>
                                <option>Viva</option>
                                <option>Assignment</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label>Exam Date</label>
                        <input asp-for="ExamDate" class="form-control" type="date" />
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-3">
                            <label>Start Hour</label>
                            <input asp-for="StartHour" type="number" min="0" max="23" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label>Start Minute</label>
                            <input asp-for="StartMinute" type="number" min="0" max="59" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label>End Hour</label>
                            <input asp-for="EndHour" type="number" min="0" max="23" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label>End Minute</label>
                            <input asp-for="EndMinute" type="number" min="0" max="59" class="form-control" />
                        </div>
                    </div>


                    <div class="mt-3">
                        <label>Question</label>
                        <textarea asp-for="QuestionText" class="form-control"></textarea>
                    </div>

                    <h5 class="mt-4">Answer Options</h5>
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="form-group">
                            <input type="text" name="answerOptions" class="form-control answer-input" placeholder="Option @(i + 1)" />
                        </div>
                    }

                    <div class="mt-3">
                        <label>Correct Answer</label>
                        <select name="correctAnswerIndex" class="form-control" id="correctAnswerDropdown">
                            <option value="">-- Select Correct Answer --</option>
                        </select>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">Save Question</button>
                    </div>

                    <div class="mb-3 text-right">
                        <a asp-action="ExportQuestionsToExcel" class="btn btn-success">Export to Excel</a>
                        <a asp-action="ExportQuestionsToPdf" class="btn btn-danger">Export to PDF</a>
                    </div>


                    <hr />
                    <h3>Existing Questions</h3>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Standard</th>
                                <th>Subject</th>
                                <th>Exam Type</th>
                                <th>Exam Date</th>
                                <th>Exam Time</th>
                                <th>Question</th>
                                <th>Correct Answer</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.QuestionList != null)
                            {
                                foreach (var q in ViewBag.QuestionList)
                                {
                                    <tr>
                                        <td>@q.Category?.Name</td>
                                        <td>@q.Subject?.Name</td>
                                        <td>@q.ExamType</td>
                                        <td>@q.ExamDate?.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            @if (q.StartHour != null && q.EndHour != null)
                                            {
                                                @($"{q.StartHour:D2}:{q.StartMinute:D2} - {q.EndHour:D2}:{q.EndMinute:D2}")
                                            }
                                        </td>
                                        <td>@q.QuestionText</td>
                                        <td>@q.RightAnswer</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-sm btn-warning">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-sm btn-danger"
                                               >Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>


                </form>
            </div>
        </div>
    </section>
</div>

<script>
    const inputs = document.querySelectorAll(".answer-input");
    const dropdown = document.getElementById("correctAnswerDropdown");

    function updateDropdown() {
        dropdown.innerHTML = '<option value="">-- Select Correct Answer --</option>';
        inputs.forEach((input, index) => {
            if (input.value.trim() !== "") {
                dropdown.innerHTML += `<option value="${index}">${input.value}</option>`;
            }
        });
    }

    inputs.forEach(input => input.addEventListener("input", updateDropdown));
</script>
