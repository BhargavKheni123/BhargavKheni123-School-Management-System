@model List<Digital.Models.ViewModels.StudentAssignmentItemViewModel>
@{
    ViewBag.Title = "Assignments";
    var student = ViewBag.Student;
}

<style>
    .student-content {
        margin-left: 250px;
        padding: 20px;
        min-height: 100vh;
        background-color: #f9f9f9;
    }

    .register-header {
        background-color: #f1f1f1;
        padding: 15px;
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

    .register-form {
        margin: 20px 0;
        padding: 20px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 6px;
    }

    .form-actions {
        text-align: right;
        margin-top: 10px;
    }

        .form-actions button {
            margin-left: 10px;
        }

    .table-section {
        margin-top: 30px;
    }
</style>

<div class="student-content">
    <div class="register-header">
        Your Assignments
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Subject</th>
                <th>Title</th>
                <th>Assigned</th>
                <th>Deadline</th>
                <th>Status / Marks</th>
                <th>Assignment Doc</th>
                <th>Upload</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var a = item.Assignment;
                var s = item.AssignmentSubmissions;
                bool closed = DateTime.Now > a.SubmissionDeadline;

                <tr>
                    <td>@(a.Subject?.Name ?? "-")</td>
                    <td>@a.Title</td>
                    <td>@a.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td>@a.SubmissionDeadline</td>

                    <td>
                        @if (s != null && s.Marks.HasValue)
                        {
                            <span class="badge bg-success">Marks: @s.Marks</span>
                        }
                        else if (s != null)
                        {
                            <span class="badge bg-warning">Submitted (Not Graded)</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Not Submitted</span>
                        }
                    </td>

                    <td>
                        <a asp-action="DownloadAssignment" asp-route-id="@a.Id" class="btn btn-sm btn-primary">
                            Download
                        </a>
                    </td>

                    <td>
                        @if (s != null)
                        {
                            if (s.Marks.HasValue)
                            {
                                <span class="text-success">Graded - Upload Closed</span>
                            }
                            else
                            {
                                <span class="text-secondary">Already Submitted</span>
                            }
                        }
                        else if (closed)
                        {
                            <span class="text-danger">Closed</span>
                        }
                        else
                        {
                            <form asp-action="Upload" asp-controller="StudentAssignment" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="AssignmentId" value="@a.Id" />
                                <input type="file" name="file" class="form-control-file d-inline-block" required />
                                <button type="submit" class="btn btn-primary btn-sm mt-1">Upload</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
