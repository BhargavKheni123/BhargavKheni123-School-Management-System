@model digital.Models.StudentViewModel
@{
    ViewData["Title"] = "Student Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .student-content {
        margin-left: 250px; 
        padding: 20px;
        min-height: 100vh;
    }
</style>

<div class="student-content">
    <h2 class="text-center mb-4">Student Registration</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="Student" method="post" class="row g-3">
        <div class="col-12">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-for="CategoryId" class="form-select" asp-items="Model.Categories">
                <option value="">-- Select Standard --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="SubCategoryId" class="form-label"></label>
            <select asp-for="SubCategoryId" class="form-select" asp-items="Model.SubCategories">
                <option value="">-- Select Class --</option>
            </select>
            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="DOB" class="form-label"></label>
            <input asp-for="DOB" class="form-control" />
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">-- Select Gender --</option>
                <option>Male</option>
                <option>Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="MobileNumber" class="form-label"></label>
            <input asp-for="MobileNumber" class="form-control" />
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Address" class="form-label"></label>
            <textarea asp-for="Address" class="form-control"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>


    <hr class="my-4" />

    <h4 class="mb-3">Registered Students</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Standard</th>
                <th>Class</th>
                <th>DOB</th>
                <th>Gender</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.StudentList)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Category?.Name</td>
                    <td>@student.SubCategory?.Name</td>
                    <td>@student.DOB.ToString("dd-MM-yyyy")</td>
                    <td>@student.Gender</td>
                    <td>@student.MobileNumber</td>
                    <td>@student.Address</td>
                    <td>
                        <a asp-action="EditStudent" asp-route-id="@student.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteStudent" asp-route-id="@student.Id"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this student?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#CategoryId').change(function () {
                var categoryId = $(this).val();

                if (categoryId !== "") {
                    $.ajax({
                       url: '@Url.Action("GetSubCategories", "Student")',
                        type: 'GET',
                        data: { categoryId: categoryId },
                        success: function (data) {
                            var subCategoryDropdown = $('#SubCategoryId');
                            subCategoryDropdown.empty();
                            subCategoryDropdown.append('<option value="">-- Select Class --</option>');

                            $.each(data, function (i, subCategory) {
                                subCategoryDropdown.append('<option value="' + subCategory.id + '">' + subCategory.name + '</option>');
                            });
                        }
                    });
                } else {
                    $('#SubCategoryId').empty().append('<option value="">-- Select Class --</option>');
                }
            });
        });
    </script>
}

