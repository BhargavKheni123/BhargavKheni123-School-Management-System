@model digital.Models.StudentViewModel

<div class="student-content">
    <div class="page-header">
        <h3>Students By Class</h3>
    </div>

    <div class="filter-card">
        <form method="get" asp-action="StudentsByClass" class="row g-3">
            <div class="col-md-4">
                <label asp-for="CategoryId" class="form-label">Standard</label>
                <select asp-for="CategoryId" class="form-select" id="CategoryId" asp-items="Model.Categories">
                    <option value="">Select Standard</option>
                </select>
            </div>
            <div class="col-md-4">
                <label asp-for="SubCategoryId" class="form-label">Class</label>
                <select asp-for="SubCategoryId" class="form-select" id="SubCategoryId">
                    <option value="">Select Class</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </form>
    </div>

    @if (Model.StudentList != null && Model.StudentList.Any())
    {
        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Standard</th>
                        <th>Class</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.StudentList)
                    {
                        <tr>
                            <td>@s.Id</td>
                            <td>@s.Name</td>
                            <td>@s.Category?.Name</td>
                            <td>@s.SubCategory?.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3">No students found for the selected Standard/Class.</div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#CategoryId').change(function () {
                var categoryId = $(this).val();
                var subCategoryDropdown = $('#SubCategoryId');
                subCategoryDropdown.empty();
                subCategoryDropdown.append('<option value="">-- Select Class --</option>');

                if (categoryId !== "") {
                    $.ajax({
                        url: '@Url.Action("GetSubCategories", "Student")',
                        type: 'GET',
                        data: { categoryId: categoryId },
                        success: function (data) {
                            $.each(data, function (i, subCategory) {
                                subCategoryDropdown.append('<option value="' + subCategory.id + '">' + subCategory.name + '</option>');
                            });
                        }
                    });
                }
            });
        });
    </script>
}

<style>
    .student-content {
        padding: 20px;
        margin-left: 250px; /* adjust according to your sidebar */
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .page-header h3 {
        margin-bottom: 20px;
        font-weight: 600;
    }

    .filter-card {
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .table-responsive {
        background-color: #fff;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .form-select {
        border-radius: 8px;
        padding: 10px 12px;
    }

    .btn-primary {
        border-radius: 8px;
        font-weight: 500;
    }
</style>
