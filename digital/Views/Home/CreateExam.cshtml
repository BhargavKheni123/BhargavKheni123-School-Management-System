@model digital.ViewModels.ExamViewModel

@{
    ViewData["Title"] = "Create Exam";
}

<div class="content-wrapper">
    <!-- Page Header -->
    <section class="content-header">
        <div class="container-fluid">
            <h1 class="text-center mb-4">Exam</h1>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid d-flex justify-content-center">
            <div class="col-md-8">

                <!-- Form Card -->
                <div class="card card-primary mb-4">
                    <div class="card-header">
                        <h3 class="card-title">Create Exam</h3>
                    </div>
                    <form asp-action="CreateExam" asp-controller="Home" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Exam Title</label>
                                <input asp-for="ExamTitle" class="form-control" />
                                <span asp-validation-for="ExamTitle" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Description / Instructions</label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Exam Type</label>
                                <select asp-for="ExamType" class="form-control">
                                    <option value="">-- Select --</option>
                                    <option>Unit Test</option>
                                    <option>Midterm</option>
                                    <option>Final</option>
                                    <option>Practical</option>
                                    <option>Viva</option>
                                    <option>Assignment</option>
                                </select>
                                <span asp-validation-for="ExamType" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Class</label>
                                <select asp-for="CategoryId" class="form-control" id="CategoryDropdown">
                                    <option value="">-- Select Class --</option>
                                    @foreach (var item in Model.Categories)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Exam Date</label>
                                <input asp-for="ExamDate" type="date" class="form-control" />
                                <span asp-validation-for="ExamDate" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label>Subject</label>
                                <select asp-for="SubjectId" class="form-control">
                                    <option value="">-- Select Subject --</option>
                                    @foreach (var item in Model.Subjects)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="SubjectId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Assigned Teacher</label>
                                <select asp-for="AssignedTeacherId" class="form-control">
                                    <option value="">-- Select Teacher --</option>
                                    @foreach (var item in Model.Teachers)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="AssignedTeacherId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>

                <!-- List Card -->
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title">Exam List</h3>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-bordered table-striped text-center">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Class</th>
                                    <th>ExamDate</th>
                                    <th>Subject</th>
                                    <th>Teacher</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ExamList)
                                {
                                    <tr>
                                        <td>@item.ExamTitle</td>
                                        <td>@item.ExamType</td>
                                        <td>@item.ClassName</td>
                                        <td>@item.ExamDate.ToString("yyyy-MM-dd")</td>
                                        <td>@item.SubjectName</td>
                                        <td>@item.TeacherName</td>
                                        <td>
                                            <a asp-action="EditExam" asp-route-id="@item.ExamId" class="btn btn-sm btn-warning">Edit</a>
                                            <a asp-action="DeleteExam" asp-route-id="@item.ExamId" class="btn btn-sm btn-danger"
                                               onclick="return confirm('Are you sure you want to delete this exam?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $("#CategoryDropdown").change(function () {
            var categoryId = $(this).val();
            $("#SubCategoryDropdown").empty().append('<option value="">-- Select Division --</option>');

            if (categoryId) {
                $.getJSON('@Url.Action("GetSubCategories", "Home")', { categoryId: categoryId }, function (data) {
                    $.each(data, function (i, item) {
                        $("#SubCategoryDropdown").append('<option value="' + item.id + '">' + item.name + '</option>');
                    });
                });
            }
        });
    </script>
}
