@model digital.Models.RegisterViewModel

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .Registration-content {
        margin-left: 250px;
        padding: 20px;
        min-height: 100vh;
    }
</style>

<div class="Registration-content">
    <h2 class="text-center mb-4">Registration</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-controller="Home" asp-action="Register" method="post">
        <div class="input-group mb-3">
            <input asp-for="Name" class="form-control" placeholder="Full name" required />
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-user"></span>
                </div>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="input-group mb-3">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" required />
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="input-group mb-3">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Role</label><br />
            <input type="radio" asp-for="Role" value="Student" required /> Student
            <input type="radio" asp-for="Role" value="Teacher" /> Teacher
            <input type="radio" asp-for="Role" value="Admin" /> Admin
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="text-danger">@ViewBag.Error</div>

        <div class="col-4 mt-3">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
    </form>

    <a asp-controller="Home" asp-action="Login" class="text-center d-block mt-3">
        I already have a membership
    </a>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="ExportToExcel" class="btn btn-success">Export to Excel</a>

        <a asp-controller="Home" asp-action="ExportToPdf"
           asp-route-categoryId="1"
           asp-route-subCategoryId="1"
           asp-route-month="@DateTime.Now.Month"
           asp-route-year="@DateTime.Now.Year"
           class="btn btn-danger">
            Export to PDF
        </a>
    </div>

    <hr />
    <h4>Registered Users</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.UserList != null && Model.UserList.Any())
            {
                foreach (var user in Model.UserList)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No users registered yet.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
