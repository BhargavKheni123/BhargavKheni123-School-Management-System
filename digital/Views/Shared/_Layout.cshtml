            <section class="content" style="padding: 0 !important; margin: 0 !important;">
                @RenderBody()
            </section>
        </div>


        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                
              <div style="position: fixed; top: 10px; right: 20px; z-index: 9999;">
                <span id="token-timer" style="background: #ffebeb; padding: 5px 10px; border-radius: 5px; color: red;"></span>
              </div>
            </div>
            <strong>&copy; 2025 AdminLTE 3.</strong> All rights reserved.
        </footer>
    </div>

    <!-- ./wrapper -->
