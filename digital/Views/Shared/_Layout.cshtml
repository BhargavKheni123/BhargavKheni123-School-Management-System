                        <a href="#" class="d-block">@userName</a>
                    }
                    else
                    {
                        <a href="/Home/Login" class="d-block text-danger">Login</a>
                    }

                    @if (!string.IsNullOrEmpty(userRole))
                    {
                        <span class="text-muted small">(@userRole)</span>
                    }
                </div>
            </div>

