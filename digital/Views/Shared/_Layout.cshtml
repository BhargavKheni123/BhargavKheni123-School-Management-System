    @RenderSection("Scripts", required: false)

   <script>

    var tokenExpireTime = '@Context.Session.GetString("TokenExpireTime")';

    if (tokenExpireTime) {
         var expireTime = new Date(tokenExpireTime);
        var timerElement = document.getElementById('token-timer');

        var countdown = setInterval(function () {
            var now = new Date();
            var secondsLeft = Math.floor((expireTime - now) / 1000);

            if (secondsLeft <= 0) {
                clearInterval(countdown);
                timerElement.innerText = "Token expired!";
             
                window.location.href = '/Home/Login'; 
            } else {
                timerElement.innerText = "Token expires in: " + secondsLeft + " seconds";
            }
        }, 1000);
    }
</script>
