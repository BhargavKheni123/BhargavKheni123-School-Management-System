                    alert(" Copy, paste, and right-click are disabled for this field.");
                });


                input.addEventListener("copy", function (e) {
                    e.preventDefault();
                    alert(" Copy, paste, and right-click are disabled for this field.");
                });


                input.addEventListener("paste", function (e) {
                    e.preventDefault();
                    alert(" Copy, paste, and right-click are disabled for this field.");
                });




            });
        });
    </script>

</body>
</html>

