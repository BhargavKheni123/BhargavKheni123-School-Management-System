                                <p>Teacher Register</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="TeacherMaster" asp-action="TeacherMaster" class="nav-link @(currentController == "TeacherMaster" ? "active" : "")">
                                <i class="nav-icon fas fa-chalkboard"></i>
                                <p>Teacher</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Exam" asp-action="CreateExam" class="nav-link @(currentController == "Exam" ? "active" : "")">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>Exam Page</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="QuestionMaster" asp-action="Create" class="nav-link @(currentController == "QuestionMaster" ? "active" : "")">
                                <i class="nav-icon fas fa-question-circle"></i>
                                <p>Create Question</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="StudentExam" asp-action="StudentRank" class="nav-link @(currentController == "StudentExam" && currentAction == "StudentRank" ? "active" : "")">
                                <i class="nav-icon fas fa-chart-line"></i>
