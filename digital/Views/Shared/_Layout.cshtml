                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Subcategory" asp-action="Subcategories" class="nav-link @(currentAction == "Subcategories" ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Class</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="TimeTable" asp-action="TimeTableForm" class="nav-link @(currentAction == "TimeTableForm" ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>TimeTableForm</p>
                                    </a>
                                </li>
                            </ul>

                        </li>

                        <li class="nav-item">
                            <a asp-controller="Student" asp-action="Student" class="nav-link @(currentController == "Student" ? "active" : "")">
                                <i class="nav-icon fas fa-user-graduate"></i>
                                <p>Student</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Attendance" asp-action="AttendanceForm" class="nav-link @(currentController == "Attendance" ? "active" : "")">
                                <i class="nav-icon fas fa-check-square"></i>
                                <p>Attendance Form</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Fees" asp-action="Index" class="nav-link @(currentController == "Fees" ? "active" : "")">
