@model digital.ViewModels.TeacherViewModel
@{
    ViewData["Title"] = "Teacher Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .teacher-content {
        margin-left: 250px;
        padding: 20px;
        min-height: 100vh;
        background-color: #f9f9f9;
    }

    .register-header {
        background-color: #f1f1f1;
        padding: 15px;
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

    .register-form {
        margin: 20px 0;
        padding: 20px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

        .register-form .form-group {
            margin-bottom: 15px;
        }

    .form-actions {
        text-align: right;
        margin-top: 10px;
    }

        .form-actions button {
            margin-left: 10px;
        }

    .table-section {
        margin-top: 30px;
        background: #fff;
        padding: 15px;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }
    .form-control, .form-select {
        padding: 12px 16px;
        border-radius: 10px;
        font-size: 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 8px rgba(13,110,253,0.4);
            outline: none;
        }
</style>

<div class="teacher-content">
    <div class="register-header">
        Teacher Registration
    </div>

    <div class="register-form">
        <form asp-action="TeacherRegister" method="post">
            <div class="row">
                <div class="col-md-6 form-group">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label>Date of Birth</label>
                    <input asp-for="DOB" type="date" class="form-control" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-group">
                    <label>Gender</label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">-- Select Gender --</option>
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="col-12 form-group">
                    <label>Address</label>
                    <textarea asp-for="Address" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-actions">
                <button type="reset" class="btn btn-outline-dark">Clear</button>
                <button type="submit" class="btn btn-outline-primary">Register</button>
            </div>
        </form>
    </div>

    <div class="mt-3">
        <a asp-controller="Teacher" asp-action="ExportTeachersToExcel" class="btn btn-success">
            Export to Excel
        </a>
        <a asp-controller="Teacher" asp-action="ExportTeachersToPdf" class="btn btn-danger">
            Export to PDF
        </a>
    </div>


    <div class="table-section">
        <h4 class="mb-3">Teacher List</h4>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in ViewBag.TeacherList)
                {
                    <tr>
                        <td>@teacher.Name</td>
                        <td>@teacher.Email</td>
                        <td>@teacher.DOB.ToString("dd-MM-yyyy")</td>
                        <td>@teacher.Gender</td>
                        <td>@teacher.Address</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-warning">✏️</a>
                            <a asp-action="Delete" asp-route-id="@teacher.TeacherId"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure to delete this teacher?');">🗑️</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
