@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Exam List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>@ViewData["Title"]</h1>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <a asp-action="CreateExam" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Exam
                </a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Exam Title</th>
                            <th>Type</th>
                            <th>Class</th>
                            <th>Division</th>
                            <th>Subject</th>
                            <th>Teachers</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var exam in Model)
                            {
                                <tr>
                                    <td>@exam.ExamTitle</td>
                                    <td>@exam.ExamType</td>
                                    <td>@exam.CategoryName</td>
                                    <td>@exam.SubCategoryName</td>
                                    <td>@exam.Subject</td>
                                    <td>@string.Join(", ", exam.TeacherNames)</td>
                                    <td>
                                        <a asp-action="EditExam" asp-route-id="@exam.ExamId" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form asp-action="DeleteExam" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@exam.ExamId" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this exam?');">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="7" class="text-center">No exams found.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
