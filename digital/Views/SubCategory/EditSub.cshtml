@model digital.Models.SubCategoryViewModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Edit SubCategory";
}
<div class="content-wrapper" style="min-height: 100vh;">
    <div class="container pt-5">
        <h4 class="text-center mb-4">Edit </h4>
        <form asp-action="EditSub" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Standard</label>
                <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
            </div>

            <div class="mb-3">
                <label class="form-label">Class</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>

            <button type="submit" class="btn btn-success">Update</button>
        </form>
    </div>
</div>