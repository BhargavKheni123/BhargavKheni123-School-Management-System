@model List<digital.Models.TeacherMaster>

@{
    ViewData["Title"] = "Teacher Assignment";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categories = ViewBag.Categories as List<digital.Models.Category>;
    var subCategories = ViewBag.SubCategories as List<digital.Models.SubCategory>;
    var subjects = ViewBag.Subjects as List<digital.Models.Subject>;
    var teachers = ViewBag.Teachers as List<digital.Models.User>;
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <h1 class="text-center mb-4">Assign Teacher to Class</h1>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-lg p-4 mx-auto" style="max-width: 1000px;">
                <form method="post" asp-action="SaveTeacherAssignment">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Standard</label>
                            <select class="form-control" name="CategoryId" id="CategoryId" required>
                                <option value="">-- Select Standard --</option>
                                @foreach (var c in categories)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Class</label>
                            <select class="form-control" name="SubCategoryId" id="SubCategoryId" required>
                                <option value="">-- Select Class --</option>
                               
                            </select>
                        </div>


                        <div class="form-group col-md-3">
                            <label>Subject</label>
                            <select class="form-control" name="SubjectId" required>
                                <option value="">-- Select Subject --</option>
                                @foreach (var s in subjects)
                                {
                                    <option value="@s.Id">@s.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group col-md-3">
                            <label>Teacher</label>
                            <select class="form-control" name="TeacherId" required>
                                <option value="">-- Select Teacher --</option>
                                @foreach (var t in teachers)
                                {
                                    <option value="@t.Id">@t.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="text-right mt-3">
                        <button type="submit" class="btn btn-success px-4">Assign</button>
                    </div>
                </form>
            </div>

            <div class="mt-5">
                <h3 class="mb-3">Assigned Teachers List</h3>
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Standard</th>
                            <th>Class</th>
                            <th>Subject</th>
                            <th>Teacher</th>
                            <th>Assigned Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Category?.Name</td>
                                    <td>@item.SubCategory?.Name</td>
                                    <td>@item.Subject?.Name</td>
                                    <td>@item.Teacher?.Name</td>
                                    <td>@item.CreatedDate.ToString("dd-MM-yyyy")</td>
                                    <td>
                                        <a asp-action="EditTeacherMaster" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                                        <a asp-action="DeleteTeacherMaster" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                                           onclick="return confirm('Are you sure you want to delete this assignment?');">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No records found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#CategoryId').change(function () {
                var categoryId = $(this).val();

                if (categoryId !== "") {
                    $.ajax({
                        url: '/TeacherMaster/GetSubCategories', 
                        type: 'GET',
                        data: { categoryId: categoryId },
                        success: function (data) {
                            var subCategoryDropdown = $('#SubCategoryId');
                            subCategoryDropdown.empty();
                            subCategoryDropdown.append('<option value="">-- Select Class --</option>');

                            $.each(data, function (i, subCategory) {
                                subCategoryDropdown.append('<option value="' + subCategory.id + '">' + subCategory.name + '</option>');
                            });
                        }
                    });
                } else {
                    $('#SubCategoryId').empty().append('<option value="">-- Select Class --</option>');
                }
            });
        });
    </script>
}

