@model digital.ViewModels.ExamResultFilterViewModel


@{
    ViewData["Title"] = "Exam Result Filter";
}

<div class="container mt-4">
    <h2 class="mb-4">Filter Your Exam Results</h2>

    <form asp-action="StudentResultFilter" method="post" class="row g-3">
        <select asp-for="ExamType" asp-items="Model.ExamTypes" class="form-select">
            <option value="">-- Select Exam Type --</option>
        </select>

        <select asp-for="SubjectId" asp-items="Model.Subjects" class="form-select">
            <option value="">-- Select Subject --</option>
        </select>



        <div class="col-12">
            <button type="submit" class="btn btn-primary">Get Result</button>
        </div>
    </form>

    <hr />

    @if (Model.ResultViewModel != null)
    {
        <!-- reuse your existing result page -->
        <partial name="ExamResult" model="Model.ResultViewModel" />
    }
    else if (Model.IsSubmitted)
    {
        <div class="alert alert-warning mt-3">
            No result found.
        </div>
    }
</div>
