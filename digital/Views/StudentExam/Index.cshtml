@model List<digital.Models.QuestionMaster>
@{
    ViewData["Title"] = "Exam list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @* width control *@
            <div class="text-center mb-4">
                <h2>Exam list</h2>
                <p>
                    <strong>Std:</strong> @ViewBag.Std |
                    <strong>Student:</strong> @ViewBag.StudentName |
                    <strong>Subject:</strong> @ViewBag.SubjectName |
                    <strong>Exam Type:</strong> @ViewBag.ExamType  |
                    <strong>Exam Date:</strong> @ViewBag.ExamDate
                </p>
            </div>
 @if (ViewBag.NoExamMsg != null)
{
    <div class="alert alert-warning text-center">@ViewBag.NoExamMsg</div>
}
else
{
            <form asp-action="SubmitExam" method="post">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="card mb-3 p-3 shadow-sm">
                        <h5>Q@(i + 1). @Model[i].QuestionText</h5>

                        @foreach (var option in Model[i].AnswerOptions)
                        {
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="radio"
                                       name="answers[@i].SelectedAnswer"
                                       value="@option.OptionText"
                                       required />
                                <label class="form-check-label">@option.OptionText</label>
                            </div>
                        }

                        <input type="hidden" name="answers[@i].QuestionId" value="@Model[i].Id" />
                    </div>
                }

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4">Submit Exam</button>
                </div>
            </form>
}
        </div>
    </div>
</div>
