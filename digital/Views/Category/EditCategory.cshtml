@model digital.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="content-wrapper" style="min-height: 100vh;">
    <div class="container pt-4">
        <h4 class="mb-3">Edit Standard</h4>

        <form asp-action="EditCategory" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Standard</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="col-md-3">
                <label for="Fees" class="form-label"><em>Fees</em></label>
                <input type="number" class="form-control" id="Fees" name="Fees" step="0.01" min="0" />
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Category" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
