@model IEnumerable<digital.ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Category Page";
}

<div class="content-wrapper" style="min-height: 100vh;">
    <div class="container-fluid pt-3 px-4">
        <div class="row">
            <div class="col text-center">
                <h4 class="fw-light mb-4"><em>Standard page</em></h4>
            </div>
        </div>

        <div class="card shadow-sm rounded p-4 mb-4">
            <form asp-action="Category" method="post" class="row g-3 align-items-end justify-content-center">
                <div class="col-md-4">
                    <label for="Name" class="form-label"><em>Standard</em></label>
                    <input type="text" class="form-control" id="Name" name="Name" required />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100"><em>Submit</em></button>
                </div>
            </form>
        </div>

        <div class="mb-3 text-end">
           
            <a asp-controller="Category" asp-action="ExportCategoriesToExcel" class="btn btn-success me-2">Export to Excel</a>
            <a asp-controller="Category" asp-action="ExportCategoriesToPdf" class="btn btn-danger">Export to PDF</a>
        </div>


        <div class="card shadow-sm rounded">
            <div class="table-responsive">
                <table class="table table-bordered text-center mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><em>Standard</em></th>
                            <th><em>Edit / Delete</em></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
